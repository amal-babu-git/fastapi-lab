# ==================== Environment Configuration ====================
# Copy this file to .env and update with your actual values
# Never commit .env file to version control!

# ==================== Application Settings ====================
APP_NAME=FastAPI Learn
APP_VERSION=0.1.0
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true

# ==================== API Settings ====================
API_V1_PREFIX=/api/v1
API_PORT=8000
HOST=0.0.0.0

# ==================== Database Configuration ====================
# Default values for local development with docker-compose
POSTGRES_USER=fastapi_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=fastapi_db
POSTGRES_HOST=localhost  # Use 'db' for Docker Compose
POSTGRES_PORT=5432

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false  # Set to true to log SQL queries (only in development)

# ==================== Security Settings ====================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# ==================== CORS Settings ====================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ==================== Middleware Settings ====================
# Comma-separated list of trusted hosts (production only)
TRUSTED_HOSTS=localhost,127.0.0.1,yourdomain.com
ENABLE_GZIP=true
GZIP_MINIMUM_SIZE=1000

# ==================== Logging Settings ====================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL


