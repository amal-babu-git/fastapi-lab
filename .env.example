# ==================== Environment Configuration ====================
# Copy this file to .env and update with your actual values
# Never commit .env file to version control!
#
# Quick Start with Docker:
#   1. cp .env.example .env
#   2. Update POSTGRES_PASSWORD and SECRET_KEY below
#   3. docker-compose up --build -d

# ==================== Application Settings ====================
APP_NAME=FastAPI Learn
APP_VERSION=0.1.0
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true

# ==================== API Settings ====================
API_V1_PREFIX=/api/v1
API_PORT=8000
HOST=0.0.0.0

# ==================== Database Configuration ====================
# IMPORTANT: When using Docker Compose, set POSTGRES_HOST=postgres (the service name)
# For local development without Docker, use POSTGRES_HOST=localhost

POSTGRES_USER=fastapi_user
POSTGRES_PASSWORD=change_me_to_secure_password
POSTGRES_DB=fastapi_db
POSTGRES_HOST=postgres  # Use 'postgres' for Docker, 'localhost' for local dev
POSTGRES_PORT=5432

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false  # Set to true to log SQL queries (only in development)

# ==================== Security Settings ====================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# ==================== CORS Settings ====================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ==================== Middleware Settings ====================
# Comma-separated list of trusted hosts (production only)
TRUSTED_HOSTS=localhost,127.0.0.1,yourdomain.com
ENABLE_GZIP=true
GZIP_MINIMUM_SIZE=1000

# ==================== Logging Settings ====================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL


